generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ptinfo {
  ptnumber      Int            @unique
  ptname        String
  ptage         Int
  sex           String
  id            Int            @id @default(autoincrement())
  birth         DateTime?
  dicoms        Dicom[]        @relation("PtinfoDicoms")
  reports       Report[]       @relation("PtinfoReports")
  schedules     Schedule[]     @relation("PtinfoSchedules")
  teachingFiles teachingFile[] @relation("PtinfoTeachingFiles")
}

model Report {
  examdate     DateTime
  ptnumber     Int
  modality     String?
  department   String
  clinicaldiag String
  imagediag    String
  report       String
  finaldiag    String
  interesting  String
  inputby      String
  inputdate    DateTime
  site         String
  inputtime    DateTime
  id           Int      @id @default(autoincrement())
  doctor       String?
  ptinfo       Ptinfo   @relation("PtinfoReports", fields: [ptnumber], references: [ptnumber])
}

model Doctor {
  docname        String
  department     String
  password       String
  level          Int
  docid          Int    @id @default(autoincrement())
  hospital       String
  employeeNumber String @unique
}

model Schedule {
  id                Int      @id @default(autoincrement())
  department        String
  doctor            String
  ptnumber          Int
  inputter          String?
  ivrname           String?
  memo              String?
  examenddatetime   DateTime
  examstartdatetime DateTime
  ptinfo            Ptinfo   @relation("PtinfoSchedules", fields: [ptnumber], references: [ptnumber])
}

model teachingFile {
  id              Int      @id @default(autoincrement())
  site            String
  field           String
  ptnumber        Int
  dicomid         Int
  agesex          String
  pthistory       String
  answer          String
  explanation     String
  registration    DateTime @default(now())
  registname      String
  difficultylevel Int
  pathology       String
  publication     Boolean
  seaquential     String   @unique
  ptinfo          Ptinfo   @relation("PtinfoTeachingFiles", fields: [ptnumber], references: [ptnumber])
}

model Dicom {
  id         Int      @id @default(autoincrement())
  pt_ID      Int
  seq_num    Int
  ex_date    DateTime
  modality   String
  image_num  Int
  seriespath String
  ptinfo     Ptinfo   @relation("PtinfoDicoms", fields: [pt_ID], references: [ptnumber])
}
